<% layout('../layout') -%>

<h1><%= attendee.preferred_name %> <%= attendee.last_name %></h1>
<p>Date of Birth: <%= attendee.birthday %> | Email: <%= attendee.email %></p>
<hr>

<div class="container">
  <% collection.forEach(function(element) { %>
    <%if (element.id === attendee.id) { %>


  <div class="container col-xs-6 list-bottom">
    <div class="list-group-item list-group-item-action active">
      <a href='/events/<%= element.id %>/register'><h3><%= element.title %></h3></a>

    </div>
    <div class="list-group-item list-group-item-action">
      <div class="col-xs-4">
        <img src="<%= element.img_url %>" alt="">
      </div>
      <div class="col-xs-8">
        <p><%= element.description %></p>
        <p>Over 21: <%= element.over_21 %></p>
        <p>Event Starts: <%= element.start_datetime %></p>
        <p>Event Ends: <%= element.end_datetime %></p>

      </div>

    </div>
  </div>
  <% } %>
<% }); %>
</div>
